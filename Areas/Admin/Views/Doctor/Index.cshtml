@model IEnumerable<QuanLyHSBA.Models.Doctor>

<!-- Bootstrap icons-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Index";
}

<h1>Thông Tin Bác Sĩ</h1>

<p>
    <a asp-action="Add"><button class="btn btn-outline-dark">Create New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialty)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    <img src="@item.ImageUrl" style="width: 180px; height: 200px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty.Name)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id"><button class="btn btn-outline-dark"><i class="bi bi-pencil-square"></i></button></a> |
                    <a asp-action="Display" asp-route-id="@item.Id"><button class="btn btn-outline-dark"><i class="bi bi-list"></i></button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-outline-dark"><i class="bi bi-trash"></i></button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
